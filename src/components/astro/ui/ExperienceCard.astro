---
import clsx from "clsx";

type Props = {
  class?: string;
  company: string;
  location: string;
  startDate: string;
  endDate: string;
};

const {
  company,
  location,
  startDate,
  endDate,
  class: className,
} = Astro.props as Props;
---

<article class={clsx("grid gap-2 rounded-[24px] bg-white p-10", className)}>
  <div>
    <time datetime={startDate}>{startDate}</time> - <time datetime={endDate}
      >{endDate}</time
    >
  </div>
  <h3 class="text-[22px] font-bold">{company}, {location}</h3>
</article>

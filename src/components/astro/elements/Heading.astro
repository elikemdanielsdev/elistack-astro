---
import clsx from "clsx";

type Props = {
  class?: string;
  size?: keyof typeof sizes;
  tag?: "h1" | "h2" | "h3" | "h4" | "h5" | "h6";
};

const sizes = {
  "display-1": "text-display-1",
  "display-2": "text-display-2",
  "display-3": "text-display-3",
};

const {
  size = "display-1",
  tag: Tag = "h1",
  class: className,
} = Astro.props as Props;
---

<Tag class={clsx(sizes[size], className)}>
  <slot />
</Tag>

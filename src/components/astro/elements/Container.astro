---
import clsx from "clsx";

type Props = {
  class?: string;
  size?: keyof typeof sizes;
};

const sizes = {
  sm: "max-w-screen-sm",
  md: "max-w-screen-md",
  lg: "max-w-screen-lg",
  xl: "max-w-screen-xl",
  "2xl": "max-w-screen-2xl",
};

const { size = "lg", class: className } = Astro.props as Props;
---

<div class={clsx("mx-auto", sizes[size], className)}>
  <slot />
</div>

---
import clsx from "clsx";
import Section from "@/components/astro/elements/Section.astro";
import Container from "@/components/astro/elements/Container.astro";
import Heading from "@/components/astro/elements/Heading.astro";
import Button from "@/components/astro/elements/Button.astro";
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import ErrorImage from "@/assets/images/error-image.png";
import ErrorLayout from "@/layouts/ErrorLayout.astro";
import HeroPrimary from "@/components/astro/sections/HeroPrimary.astro";
---

<ErrorLayout>
  <HeroPrimary
    title="Sorry to see you here"
    subtitle="It’s possible the page you’re looking for has been archived, deleted or was never created."
    button
    buttonProps={{
      class: "px-10 h-auto py-7",
      label: "Return home",
      size: "lg",
    }}
    message="It’s a short click back."
    image={ErrorImage}
  />
</ErrorLayout>

---
import { directus } from "@/schemas/directus";
import { readSingleton } from "@directus/sdk";

import MainLayout from "@/layouts/MainLayout.astro";
import HeroPrimary from "@/components/astro/sections/HeroPrimary.astro";
import HeroImage from "@/assets/images/hero-image.png";
---

<MainLayout>
  <HeroPrimary
    title="I make websites for busy professionals and startups"
    subtitle="Easily design expressive animations. Add effects with a few clicks and capture your audience’s attention when they land on your website."
    button
    buttonProps={{
      class: "bg-gray-950 hover:bg-gray-800 text-white px-10 h-auto py-7",
      label: "Book a call",
      size: "lg",
    }}
    message="It’s a free 30 min chat."
    image={HeroImage}
  />
</MainLayout>

---
import { ViewTransitions } from "astro:transitions";
import SEO from "@/components/astro/ui/SEO.astro";

type Props = {
  title?: string;
  description?: string;
  keywords?: string[];
  ogImage?: string;
  ogTitle?: string;
  ogDescription?: string;
};

const {
  title = "Elistack",
  description = "Website development starter template",
  keywords = ["astro", "directus", "react", "tailwindcss"],
  ogImage = "",
  ogTitle = "Elistack",
  ogDescription = "Website development starter template",
} = Astro.props as Props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title={title}
      description={description}
      keywords={keywords}
      ogImage={ogImage}
      ogTitle={ogTitle}
      ogDescription={ogDescription}
    />
    <ViewTransitions />
  </head>
  <body class="flex min-h-screen flex-col antialiased">
    <main class="flex-grow">
      <slot />
    </main>
  </body>
</html>
